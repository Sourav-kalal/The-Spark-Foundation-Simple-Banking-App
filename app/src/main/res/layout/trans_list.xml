<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:background="#FFD740"
    android:layout_margin="5dp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/sent_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:contentDescription="@string/sent_successfully"
        android:src="@drawable/ic_baseline_call_made_24" />

    <LinearLayout
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/sent_icon"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="5">

        <TextView
            android:id="@+id/tv_Trans_cus_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:padding="5dp"
            android:text="@string/name_of_customer"
            android:textColor="#FF5722"
            android:textSize="21sp" />

        <TextView
            android:id="@+id/tv_amt_sent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="@string/amt"
            android:textColor="#FF5722"
            android:textSize="21sp" />
    </LinearLayout>
</RelativeLayout>